<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cgvsu.GuiController">

    <top>
        <MenuBar fx:id="menuBar">
            <Menu text="Файл">
                <MenuItem fx:id="openMenuItem" text="Открыть модель..." />
                <MenuItem fx:id="saveMenuItem" text="Сохранить модель..." />
                <SeparatorMenuItem />
                <MenuItem fx:id="exitMenuItem" text="Выход" />
            </Menu>
            <Menu text="Вид">
                <CheckMenuItem fx:id="darkThemeMenuItem" text="Темная тема" />
                <SeparatorMenuItem />
                <CheckMenuItem fx:id="wireframeMenuItem" text="Показать сетку" />
                <CheckMenuItem fx:id="textureMenuItem" text="Использовать текстуру" />
                <CheckMenuItem fx:id="lightingMenuItem" text="Использовать освещение" />
                <SeparatorMenuItem />
                <MenuItem fx:id="addCameraMenuItem" text="Добавить камеру" />
                <MenuItem fx:id="removeCameraMenuItem" text="Удалить камеру" />
                <MenuItem fx:id="toggleCameraVisibilityItem" text="Показать/скрыть камеры" />
            </Menu>
            <Menu text="Редактирование">
                <MenuItem text="Выделить все" />
                <MenuItem text="Снять выделение" />
                <SeparatorMenuItem />
                <MenuItem fx:id="deleteMenuItem" text="Удалить выделенное" />
            </Menu>
            <Menu text="Справка">
                <MenuItem text="О программе" />
            </Menu>
        </MenuBar>
    </top>

    <left>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label text="Модели и камеры" style="-fx-font-weight: bold; -fx-font-size: 14;" />

            <TitledPane text="Модели" expanded="true">
                <VBox spacing="5" style="-fx-padding: 5;">
                    <TreeView fx:id="modelTreeView"
                              prefHeight="200" minHeight="150"
                              VBox.vgrow="ALWAYS" />
                </VBox>
            </TitledPane>

            <TitledPane text="Камеры" expanded="true">
                <VBox spacing="5" style="-fx-padding: 5;">
                    <TreeView fx:id="cameraTreeView"
                              prefHeight="150" minHeight="100"
                              VBox.vgrow="ALWAYS" />
                    <HBox spacing="5">
                        <CheckBox fx:id="showCamerasCheckBox" text="Показать камеры" />
                    </HBox>
                </VBox>
            </TitledPane>

            <Separator />

            <Label text="Инструменты" style="-fx-font-weight: bold;" />

            <VBox spacing="5">
                <Label text="Режим выделения:" />
                <HBox spacing="5">
                    <ToggleButton fx:id="selectModelButton" text="Модель" selected="true"
                                  prefWidth="70" />
                    <ToggleButton fx:id="selectVertexButton" text="Вершина"
                                  prefWidth="70" />
                    <ToggleButton fx:id="selectPolygonButton" text="Полигон"
                                  prefWidth="70" />
                </HBox>
            </VBox>

            <Separator />

            <Button fx:id="deleteSelectedButton" text="Удалить выделенное"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;"
                    maxWidth="Infinity" />
        </VBox>
    </left>

    <center>
        <Canvas fx:id="viewportCanvas" width="800" height="600"
                style="-fx-background-color: #1a1a1a;" />
    </center>

    <right>
        <VBox fx:id="transformationPanel" spacing="10" style="-fx-padding: 10; -fx-min-width: 250;">
            <Label text="Рендеринг" style="-fx-font-weight: bold; -fx-font-size: 14;" />

            <TitledPane text="Настройки отображения" expanded="true">
                <VBox spacing="10" style="-fx-padding: 10;">
                    <VBox spacing="5">
                        <Label text="Режим рендеринга:" />
                        <ComboBox fx:id="renderModeComboBox" prefWidth="200" />
                    </VBox>

                    <Separator />

                    <VBox spacing="5">
                        <Label text="Цвет модели:" />
                        <ColorPicker fx:id="modelColorPicker" prefWidth="200" />
                    </VBox>

                    <Separator />

                    <VBox spacing="5">
                        <Label text="Текстура:" />
                        <Button fx:id="loadTextureButton" text="Загрузить текстуру"
                                maxWidth="Infinity" />
                    </VBox>
                </VBox>
            </TitledPane>

            <TitledPane text="Перемещение" expanded="false">
                <VBox spacing="5" style="-fx-padding: 10;">
                    <Label text="X:" />
                    <Slider min="-10" max="10" value="0" showTickLabels="true" showTickMarks="true" />
                    <Label text="Y:" />
                    <Slider min="-10" max="10" value="0" showTickLabels="true" showTickMarks="true" />
                    <Label text="Z:" />
                    <Slider min="-10" max="10" value="0" showTickLabels="true" showTickMarks="true" />
                    <Button text="Применить" style="-fx-background-color: #3498db; -fx-text-fill: white;"
                            maxWidth="Infinity" />
                </VBox>
            </TitledPane>

            <TitledPane text="Вращение" expanded="false">
                <VBox spacing="5" style="-fx-padding: 10;">
                    <Label text="X (градусы):" />
                    <Slider min="-180" max="180" value="0" showTickLabels="true" showTickMarks="true" />
                    <Label text="Y (градусы):" />
                    <Slider min="-180" max="180" value="0" showTickLabels="true" showTickMarks="true" />
                    <Label text="Z (градусы):" />
                    <Slider min="-180" max="180" value="0" showTickLabels="true" showTickMarks="true" />
                    <Button text="Применить" style="-fx-background-color: #3498db; -fx-text-fill: white;"
                            maxWidth="Infinity" />
                </VBox>
            </TitledPane>

            <TitledPane text="Масштаб" expanded="false">
                <VBox spacing="5" style="-fx-padding: 10;">
                    <Label text="Масштаб:" />
                    <Slider min="0.1" max="5" value="1" showTickLabels="true" showTickMarks="true" />
                    <CheckBox text="Сохранять пропорции" selected="true" />
                    <Button text="Применить" style="-fx-background-color: #3498db; -fx-text-fill: white;"
                            maxWidth="Infinity" />
                </VBox>
            </TitledPane>
        </VBox>
    </right>

    <bottom>
        <BorderPane style="-fx-background-color: #f0f0f0; -fx-padding: 5;">
            <left>
                <HBox spacing="10" style="-fx-padding: 0 10;">
                    <Label fx:id="modelCountLabel" text="Моделей: 0" />
                    <Label fx:id="cameraCountLabel" text="Камер: 1" />
                </HBox